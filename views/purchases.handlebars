<h1>Add Purchases</h1>

<form action ="/purchases/add" method ="POST">
  
  <select name="product_id">

    {{#products}}
    <option value="{{id}}">{{product_name}}</option>
    {{/products}}
  </select>

  Date : <input type ="date" name ="stock_date"></input>
  Price : <input type ="number" name ="cost_price"></input>
  Quantity: <input type ="number" name ="Qty"></input>

  <select name="supplier_id">

    {{#suppliers}}
     <option value="{{id}}">{{supplier_name}}</option>
    {{/suppliers}}
  </select>

	<input type ="submit">

</form>



<h1>Purchases Records</h1> 

<div class="container-fluid">
  <table class="col-xs-12">
    <tr>
      <thead>
        <th><h2>Product Name</h2></th>
        <th><h2>Stock_date<h2></th>
        <th><h2>Price</h2></th>
        <th><h2>Quantity</h2></th> 
        <th><h2>Supplier_name</h2></th> 

        

      </thead>
    </tr>

    <tbody>

      {{#purchases}}
      <tr>
        <td>{{product_name}}</td>
        <td>{{stock_date}}</td>
        <td>{{cost_price}}</td>
        <td>{{Qty}}</td>
        <td>{{supplier_name}}</td>

        

          <td>
          <a href="/purchases/editPurchases/{{id}}">Edit</a>
          <a href="/purchases/delete/{{id}}">Delete</a>
        </td>
      </tr>
      {{/purchases}}

    </tbody>
  </table>
</div>
