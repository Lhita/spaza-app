<h1>Products</h1>

<div id="gradient"></div>
<form class="searchbox" action="/products/search" method="POST">
  <input type="search" placeholder="Search" id="search" name="searchValue" />
  <button type="submit" value="search">&nbsp;</button>
</form>

<div class="container-fluid">
  <table class="col-xs-7">
    <tr>
      <thead>
        <th>Id</th>
        <th>Product Name</th>
     
        <th>Edit/Delete</th>
      </thead>
    </tr>

<tbody>
  {{#products}}
  <tr>
      <td>{{id}}</td>
      <td>{{product_name}}</td>
    
    <td>
      <a href="/products/edit/{{id}}">Edit</a>
      <a href="/products/delete/{{id}}">Delete</a>
    </td>

  </tr>
  {{/products}}
 </tbody>
  </table>
</div>