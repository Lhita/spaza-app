<h1>Add Sales</h1>
 
<form action ="/sales/add" method ="POST">
  
  <select name="product_id">

    {{#products}}
     <option value="{{id}}">{{product_name}}</option>
    {{/products}}
   </select>

  sale_date : <input type="date" name="sales_date"></input>
  sale_price : <input type="number" name="sales_price"></input>
  Quantity:<input type="number" name="qty"></input>
  
	<input type ="submit">

</form>

<div id="gradient"></div>
  <input type="search" placeholder="Search" id="saleSearch" name="searchValue"/>
 

