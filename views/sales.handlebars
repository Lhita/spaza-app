  <table class="col-xs-7" id="sales">
    <tr>
      <thead>
        <td>Product Name</td>
        <td>Price</td>
        <td>Sales date</td>
        <td>Quantity</td>
        <td>Edit / Delete</td>
      </thead>
    </tr>

    <tbody>
      {{#sales}}
        <tr>

<td>{{product_name}}</td>
<td>R{{sales_price}}</td>
<td>{{sales_date}}</td>
<td>{{qty}}</td>

<td> 
  <a href="/sales/editSales/{{id}}">Edit</a>
  <a href="/sales/delete/{{id}}">Delete</a>
</td>

</tr>
{{/sales}}

</tbody>
</table>
</div>
